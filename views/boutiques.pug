extends layout.pug
block css
	link(rel="stylesheet" href="./css/boutiques.css")
block content
	.page-content-wrap
		.page-min-container
			.boutiques-page-block.clearfix
				.sidebar
					.filter-block
						.filter-block-header.clearfix
							span.filter-title Ваш фильтр
							.clean-filter-block
								i.fa.fa-times(aria-hidden="true")
								span.clean-filter Сбросить
						.filter-block-body
							ul.filtered-items
								li.grand.filtered-item
									i.fa.fa-level-down(aria-hidden="true")
									span.filtered-item-title= grand
								li.parent.filtered-item
									i.fa.fa-level-down(aria-hidden="true")
									span.filtered-item-title= parent
								li.category.filtered-item
									span.filtered-item-title= category
				.boutiques-content
					.boutiques-block-items
						each boutique in docs
							.boutiques-block-item
								.boutiques-block-header
									h3.boutique-name= boutique.name
								.boutiques-block-body.clearfix
									.boutiques-block-left
										.profile-block
											- var url = './img/boutiques/' + boutique.logo
											image.profile-img(src= url)
									.boutiques-block-right
										.more-arrow
											i.fa.fa-2x.fa-angle-right.more-icon(aria-hidden="true")
										ul.list.boutique-list-items
											li.boutique-list-item
												span.bord Саламат: 
												span= boutique.salamat
											li.boutique-list-item
												span.bord Салон: 
												span= boutique.salon
											li.boutique-list-item
												span.bord Телефон: 
												span= boutique.phone
										.boutiques-description-block
											h3 Описание:
											p.boutiques-description= boutique.about
					.boutiques-block-pages
						- var i = 0
						if pages
							div.pages-panel
								div.pages.clearfix
									while i < pages
										div.page-item(data-page= ++i)= i
block scripts
	script(src='./js/side-menu.js')
	script(src='./js/pagination.js')