		block scripts
	body.page
		.page-top-line
			.page-top-line-wrap.clearfix
				.nav-log-link
					.nav-link.nav-log(style='padding: 0')
						i.fa.fa-lg.fa-sign-in.icon(aria-hidden="true" style='margin-right:3px')
						span.nav-span Войти 
						span(style='color: #999;font-size: 12px;font-weight: 200') или 
						span.nav-span Зарегистрироваться
				.nav-links.clearfix
					.nav-link.nav-brands
						span.nav-span Бренды
					.nav-link.nav-nav-contacts
						span.nav-span Наши контакты
					.nav-link.nav-subsribe
						span.nav-span Подпишитесь
					.nav-link.nav-write
						span.nav-span Напишите нам
					.nav-link.nav-social(style='padding:0')
						span.nav-span Мы в соц. сетях
						i.fa.fa-lg.fa-facebook(aria-hidden="true").social-icon
						i.fa.fa-lg.fa-instagram(aria-hidden="true").social-icon
						i.fa.fa-lg.fa-vk(aria-hidden="true").social-icon
		.page-header
			.page-header-main
				.page-header-main-wrap
					.page-header-logo
						a(href='home').logo-link.link
					.page-header-co.clearfix
						.renters.link-item
							i.fa.fa-address-book(aria-hidden="true" style='font-size:1.2em').link-icon
							span.co-link-title Арендаторы
						.producers.link-item
							i.fa.fa-truck(aria-hidden="true" style='font-size:1.2em').link-icon
							span.co-link-title Производители
						.partners.link-item
							i.fa.fa-handshake-o(aria-hidden="true" style='font-size:1.2em').link-icon
							span.co-link-title Партнеры
					.page-header-search
						.search-block
							.search-box-input
								input(placeholder='поиск...').input-search
								.search-box-results
							.search-box-button
								i.fa.fa-search.button-search(aria-hidden="true" style='font-size: 1.2em; display: block')
			.page-header-nav
				.page-header-nav-wrap.clearfix
					.header-nav-category
						span.nav-category-title Категории
						i.fa.fa-angle-down.category-arrow(style='font-size:1.5em')
						.side-menu-block.page-block
							ul.menu-list.list
								each item1, index in lvl1
									li(data-id= item1.id).menu-item= item1.name
										.submenu-block.page-block
											.submenu-img-block(style='background: url(./img/categories_1/= ${)')
											-var newLn = 0;
											each item2 in lvl2
												if newLn == 3
													- newLn = 0
													.newLine.clearfix
												if item2.idparent == item1.id
													- newLn++
													.submenu-block-list
														ul.submenu-list.list
															span.submenu-list-span(data-id= item2.id)= item2.name
															- var n = 0;
															each item3 in lvl3
																if n < 5 && item3.idparent == item2.id
																	li.submenu-item
																		- var name = item3.name
																		if name.indexOf("(") > -1
																			- name = name.substring(0, name.indexOf("("))
																		span.submenu-item-span(data-id= item3.id)= name
																	- n++
					.header-nav-menu.clearfix
						each link in links
							a.nav-menu-link.link(href= link.link)= link.linktitle
		.page-content
